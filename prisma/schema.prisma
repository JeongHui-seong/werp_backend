generator client {
  provider = "prisma-client"
  output = "../src/generated"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id  String  @id @default(uuid()) @db.Uuid
  email String  @unique
  name  String
  phone String  @unique
  status  String
  hire_date DateTime @default(now())
  updated_at  DateTime  @default(now()) @updatedAt

  dept_id Int
  role_id Int

  department  Department  @relation(fields: [dept_id], references: [id])
  role  Role  @relation(fields: [role_id], references: [id])
  
  attendances Attendance[]
  LeaveRequest LeaveRequest[]
  approvedLeaves LeaveRequest[] @relation("ApprovedLeaves")
}

model Department {
  id  Int @id @default(autoincrement())
  name  String

  users User[]
}

model Role {
  id  Int @id @default(autoincrement())
  name  String

  users User[]
}

model Attendance {
  id  Int @id @default(autoincrement())
  user_id String @db.Uuid
  date DateTime @db.Date
  clockin DateTime?
  clockout DateTime?
  worktime Int?
  leave_date_id Int?
  note String? @db.Text

  user User @relation(fields: [user_id], references: [id])
  leave_date LeaveDate? @relation(fields: [leave_date_id], references: [id])

  @@index([user_id])
  @@index([date])
}

model LeaveRequest {
  id            Int      @id @default(autoincrement())
  user_id       String   @db.Uuid
  approver_id   String?  @db.Uuid
  leave_type_id Int

  start_date    DateTime @db.Date
  end_date      DateTime @db.Date

  status        String   @db.VarChar(20)
  reason        String?  @db.VarChar(255)

  created_at    DateTime @default(now()) @db.Date
  approved_at   DateTime? @db.Date
  rejection_reason String? @db.VarChar(255)

  dates         LeaveDate[]

  user          User     @relation(fields: [user_id], references: [id])
  approver      User?    @relation("ApprovedLeaves", fields: [approver_id], references: [id])
  leave_type    LeaveType @relation(fields: [leave_type_id], references: [id])
}

model LeaveDate {
  id              Int      @id @default(autoincrement())
  leave_request_id Int
  leave_date      DateTime @db.Date

  leave_request   LeaveRequest @relation(fields: [leave_request_id], references: [id])

  @@unique([leave_request_id, leave_date])

  attendances Attendance[]
}


model LeaveType {
  id  Int @id @default(autoincrement())
  type String @db.VarChar(20) @unique
  days Decimal @db.Decimal(3, 2)

  LeaveRequest LeaveRequest[]
}

model LeavePolicy {
  id Int @id @default(autoincrement())
  year Int @unique
  days Int
}